# http://editorconfig.org
root = true

[*]
charset = utf-8
indent_size = 2
indent_style = tab
tab_width = 2
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true

[*.{md,mdx}]
indent_style = space
# https://github.com/microsoft/vscode/issues/1679
trim_trailing_whitespace = false
